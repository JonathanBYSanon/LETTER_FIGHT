<UserControl x:Class="LETTER_FIGHT.View.Element.LetterElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LETTER_FIGHT.View.Element"
             mc:Ignorable="d" >
    
    <!-- User control that represent each letter -->
    <Border BorderBrush="LimeGreen"
            BorderThickness="1"
            CornerRadius="10"
            Background="#000000"
            Width="80"
            Height="80">
        <Border.Effect>
            <DropShadowEffect Color="LimeGreen"
                          BlurRadius="15"
                          ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Counter}"
                       FontSize="14"
                       Margin="0,5,5,0"
                       Foreground="LimeGreen"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       FontFamily="Consolas"/>

            <TextBlock Text="{Binding Value}"
                       Grid.Row="1"
                       FontSize="30"
                       Foreground="LimeGreen"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Consolas"/>

        </Grid>
    </Border>
</UserControl>
